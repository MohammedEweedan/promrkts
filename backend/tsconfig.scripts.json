{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"],
    "rootDir": "."
  },
  "include": ["scripts/**/*.ts", "prisma/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
